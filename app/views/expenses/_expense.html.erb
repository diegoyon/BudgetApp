<div id="<%= dom_id expense %>">
  <p>
    <strong>Name:</strong>
    <%= expense.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= expense.amount %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= expense.created_at.strftime("%e %b %y") %>
  </p>

  <%= link_to "Edit this expense", edit_category_expense_path(@category, expense) %>
  <%= button_to "Destroy this expense", category_expense_path(@category, expense), method: :delete %>
</div>
