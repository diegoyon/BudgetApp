
<div class="category-card" id="<%= dom_id category %>">
  <%= link_to category do %>
    <div class="category-details">
      <p>
        <%= category.icon %>
      </p>

      <p>
        <%= category.name %>
      </p>

      <div>
        <p><strong>Total:</strong></p>
        <p><strong>$<%= category.expenses.sum(:amount) %></strong></p>
      </div>
    </div>
  <%end%>
    <div class="edit-destroy-buttons">
      <%= link_to image_tag("edit.png"), edit_category_path(category), class: 'edit-btn' %>
      <%= button_to image_tag("delete.png"), category, method: :delete, class: 'delete-btn' %>
    </div>
  
</div>