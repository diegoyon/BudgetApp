

<div class="category-card" id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Icon:</strong>
    <%= category.icon %>
  </p>

  <p>
    <strong>Total amount of all transactions:</strong>
    <%= category.expenses.sum(:amount) %>
  </p>

  <%= link_to "Edit this category", edit_category_path(category) %>
  <%= button_to "Destroy this category", category, method: :delete %>

</div>
