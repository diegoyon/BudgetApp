<p style="color: green"><%= notice %></p>

<h1>Categories</h1>

<div id="categories">
  <% @categories.order('created_at DESC').each do |category| %>
    <% if can? :manage, category %>
      <%= link_to category do %>
        <%= render category %>
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
