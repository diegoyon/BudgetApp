<div class="category-card-show" id="<%= dom_id category %>">
  <%= link_to category do %>
    <div class="category-details-show">
      <p>
        <%= category.icon %>
      </p>

      <p>
        <%= category.name %>
      </p>

      <div>
        <p><strong>Total: <%= number_to_currency(category.expenses.sum(:amount)) %></strong></p>
      </div>
    </div>
  <%end%>
</div>